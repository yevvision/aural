# Aural App - .htaccess Konfiguration für yev.vision
# Optimiert für React SPA mit PHP Backend

# =============================================================================
# SPA ROUTING - Alle Anfragen an index.html weiterleiten
# =============================================================================
RewriteEngine On

# Handle Angular and React Router
# Alle Anfragen die nicht zu existierenden Dateien/Ordnern gehören
# werden an index.html weitergeleitet
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/uploads/
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/setup\.php$
RewriteCond %{REQUEST_URI} !^/upload\.php$
RewriteRule ^(.*)$ /index.html [L]

# =============================================================================
# PHP BACKEND ROUTING
# =============================================================================
# API-Endpunkte für PHP-Backend
RewriteRule ^api/upload$ /upload.php [L]
RewriteRule ^api/setup$ /setup.php [L]

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Content Security Policy für Audio-Apps
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; media-src 'self' blob: data:; connect-src 'self' blob:; font-src 'self' data:; object-src 'none'; base-uri 'self';"

# XSS Protection
Header always set X-XSS-Protection "1; mode=block"

# Clickjacking Protection
Header always set X-Frame-Options "SAMEORIGIN"

# Content Type Options
Header always set X-Content-Type-Options "nosniff"

# Referrer Policy
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# =============================================================================
# CORS HEADERS für Audio-Uploads
# =============================================================================
# Erlaube CORS für Audio-Uploads von yev.vision
Header always set Access-Control-Allow-Origin "https://yev.vision"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
Header always set Access-Control-Allow-Credentials "true"

# =============================================================================
# AUDIO FILE HANDLING
# =============================================================================
# Audio-Dateien mit korrekten Headers
<FilesMatch "\.(mp3|wav|webm|ogg|m4a)$">
    Header set Content-Type "audio/mpeg"
    Header set Cache-Control "public, max-age=31536000"
    Header set Access-Control-Allow-Origin "https://yev.vision"
</FilesMatch>

# =============================================================================
# UPLOAD DIRECTORY PROTECTION
# =============================================================================
# Verhindere direkten Zugriff auf Upload-Ordner
<Directory "uploads">
    Options -Indexes
    AllowOverride None
    
    # Nur PHP-Dateien erlauben
    <Files "*.php">
        Require all granted
    </Files>
    
    # Alle anderen Dateien blockieren
    <FilesMatch "^(?!.*\.php$).*">
        Require all denied
    </FilesMatch>
</Directory>

# =============================================================================
# COMPRESSION für bessere Performance
# =============================================================================
<IfModule mod_deflate.c>
    # Komprimiere Text-Dateien
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    
    # Audio-Dateien nicht komprimieren (bereits komprimiert)
    SetEnvIfNoCase Request_URI \
        \.(?:mp3|wav|webm|ogg|m4a)$ no-gzip dont-vary
</IfModule>

# =============================================================================
# CACHING für statische Assets
# =============================================================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML-Dateien (SPA)
    ExpiresByType text/html "access plus 0 seconds"
    
    # CSS und JS (mit Hash-Namen)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Bilder
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # Audio-Dateien
    ExpiresByType audio/mpeg "access plus 1 year"
    ExpiresByType audio/wav "access plus 1 year"
    ExpiresByType audio/webm "access plus 1 year"
    ExpiresByType audio/ogg "access plus 1 year"
    ExpiresByType audio/mp4 "access plus 1 year"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# =============================================================================
# ERROR PAGES
# =============================================================================
# Benutzerdefinierte Fehlerseiten
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html

# =============================================================================
# PHP KONFIGURATION
# =============================================================================
# Erhöhe Upload-Limits für Audio-Dateien
php_value upload_max_filesize 50M
php_value post_max_size 50M
php_value max_execution_time 300
php_value max_input_time 300
php_value memory_limit 256M

# =============================================================================
# UNTERSEITE-KONFIGURATION für /aural/
# =============================================================================
# Die Aural-App läuft unter einer Unterseite
# Hauptdomain bleibt unverändert

